        {
          "name": "Filter",
          "icon": "filter"
        },
        {
          "name": "Head",
          "icon": "arrow-up"
        },
        {
          "name": "Rename Column",
          "icon": "pencil"
        },
        {
          "name": "Replace Value",
          "icon": "replace"
        },
        {
          "name": "Select Columns",
          "icon": "columns"
        },
        {
          "name": "Sort",
          "icon": "arrow-up-down"
        },
        {
          "name": "Tail",
          "icon": "arrow-down"
        },
        {
          "name": "Drop Duplicates",
          "icon": "copy-x"
        }
