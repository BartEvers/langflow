  "outputs": [
    {
      "output_class": "Output",
      "display_name": "DataFrame",
      "name": "output",
      "method": "perform_operation",
      "info": "The resulting DataFrame after the operation."
    }
  ],
  "template": [
    "df",
    "operation",
    "column_name",
    "filter_value",
    "filter_operator",
    "ascending",
    "new_column_name",
    "new_column_value",
    "columns_to_select",
    "num_rows",
    "replace_value",
    "replacement_value"
  ],
  "examples": [
    {
